<!-- dashboard/templates/dashboard/partials/review_history.html -->
{% if reviews.count > 1 %}
    <div class="alert alert-info mb-3">
        <i class="fas fa-info-circle me-2"></i>
        This {{ item_type|lower }} has been reviewed <strong>{{ reviews.count }}</strong> times.
    </div>
    
    <div class="list-group">
        {% for past_review in reviews %}
            <div class="list-group-item {% if past_review.pk == review.pk %}active{% endif %}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">
                            {% if past_review.pk == review.pk %}
                                <i class="fas fa-arrow-right me-1"></i>Current Review
                            {% else %}
                                Review {{ forloop.revcounter }}
                            {% endif %}
                        </h6>
                        <small>{{ past_review.review_date|date:"M d, Y" }}</small>
                    </div>
                    {% if past_review.pk != review.pk %}
                        <a href="{% url 'dashboard:relevancereview_detail' past_review.pk %}" 
                           class="btn btn-sm btn-outline-primary">
                            View
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <p class="text-muted mb-0">
        <i class="fas fa-star me-1"></i>
        This is the first review for this {{ item_type|lower }}.
    </p>
{% endif %}